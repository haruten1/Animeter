<main>
    <div id="main-inner">
        <div class="create-form-wrapper">
            <h1>ユーザー新規登録</h1>
            <%= form_with(model: @user, local: true) do |f| %>
                <%= render 'shared/error_messages' %>
                <div class="form-item">
                    <%= f.label :name ,"ユーザー名" %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
                
                <div class="form-item">
                    <%= f.label :Animeter_id,"検索用ID" %>
                    <%= f.text_field :Animeter_id%>
                </div>

                <div class="form-item">
                    <%= f.label :mail,"Email" %>
                    <%= f.email_field :mail%>
                </div>

                <div class="form-item">
                    <%= f.label :password,"パスワード" %>
                    <%= f.password_field :password%>
                </div>

                <div class="form-item">
                    <%= f.label :password_confirmation, "パスワード（確認）" %>
                    <%= f.password_field :password_confirmation%>
                </div>

                <div class="form-img">
                    <%= f.label :img, "プロフィール画像" %>
                    <%= f.file_field :img%>
                </div>

                <div class="button-panel">
                    <%= f.submit "登録", class:"button" %>
                </div>
            <% end %>
        </div>
    </div>
</main>