<main>
  <div class="form-wrapper">
    <h1>ログイン</h1>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-item">
          <%= f.label :Email %>
          <%= f.email_field :mail%>
      </div>

      <div class="form-item">
          <%= f.label :パスワード %>
          <%= f.password_field :password%>
      </div>
      <div class="button-panel">
        <%= f.submit "ログイン", class:"button" %>
      </div>
    <% end %>
    <div class="form-footer">
      <p><%= link_to "新規ユーザー登録","/signup"%></p>
    </div>
  </div>
</main>
